<div id="signin">
  <% if session[:user_id] == nil%>
    <%= form_for @user, url: signin_path do |f| %>
      <%= f.text_field :email, placeholder: "email" %>
      <%= f.password_field :password, value: "password" %>
      <%= f.submit "Sign In" %>
    <% end %>
  <% else %>
    <%= button_to "Sign Out", controller: "users", action: "signout" %>
  <% end %>
</div>
