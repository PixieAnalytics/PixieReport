<div id="project_show">
  <div id="total-visitors">
    <p><strong>Total Visitors: </strong></p>
    <%= @project.visitors.count %>
  </div>
  <div id="unique-vistors">
    <p><strong>Unique Visitors: </strong></p>
    <%= @project.visitors.select(:ip).distinct.length %>
  </div>
  <table>
    <tr><td>
  <div id="geolocation">
    <p><strong>Cities: </strong></p>
    <svg id="cities_chart" width="400", height="400"></svg>
    <% @project.visitors.select(:city).distinct.each do |visitor| %>
      <%= visitor.city %>: <%= @project.visitors.where(city: visitor.city).length %>
    <% end %>
  </div></td><td>
  <div id="popular-links">
    <p><strong>Where people go from here: </strong></p>
    <svg id="links_chart" width="400", height="400"></svg>

  </div></td><td>
  <div id="duration_stay">
    <h3>Length of stay: </h3>
    <p>Average Visit: <%= @average_stay %> minutes
    <p><i>Number of visitors and how long they stayed in minutes</i></p>
    <svg id="duration_chart" width="500", height="400"></svg>
  </div></td></table>

  <!-- <svg id="graph"></svg> -->
</div>
